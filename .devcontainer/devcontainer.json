// Adopting the default GitHub codespaces-jupyter template as starter
// https://github.com/github/codespaces-jupyter
// Simplified and optimized for Generative AI for Beginners
{
  "name": "Generative AI For Beginners (Lightweight)",
  "image": "mcr.microsoft.com/devcontainers/python:3.10", // ✅ 比 universal 镜像小 80%
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "python3 -m pip install --no-cache-dir -r requirements.txt",
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "remoteUser": "vscode"
}

